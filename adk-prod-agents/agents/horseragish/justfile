
# This list here
list: readme-update
    just -l


# This creates a .venv folder - only used by vscode
install:
    uv sync

# Run the agent in the CLI
[group('agents')]
run-horseragish: install
    uv run adk run horseragish/

# [ğŸ‘] Runs ADK WEB
[group('agents')]
run-horseragish-web: install
    uv run adk web --reload --log_level info

