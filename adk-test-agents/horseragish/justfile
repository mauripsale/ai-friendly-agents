
# This list here
list: readme-update
    just -l

# Install uv dependencies.
install: venv
    @echo "Installing dependencies... the Max way."

# This creates a .venv folder - only used by vscode
venv:
    uv sync

# Run the agent in the CLI
[group('after-meeting')]
run-horseragish:
    uv run adk run horseragish/

# [üëç] Runs ADK WEB
[group('after-meeting')]
run-horseragish-web:
    uv run adk web --reload --log_level info

